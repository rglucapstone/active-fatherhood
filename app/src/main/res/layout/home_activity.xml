<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:id="@+id/menu_toolbar"
        android:background="@android:color/transparent">

        <Button
            android:onClick="selectMenuGeneral"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Preguntas"
            android:id="@+id/menu_general"
            android:layout_weight="0.02"
            android:width="130dp"
            android:background="@drawable/background_no_button"
            android:textColor="#1f8f9e"
            android:layout_marginLeft="0dp" />

        <Button

            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="CategorÃ­as"
            android:id="@+id/menu_categories"
            android:layout_weight="0.06"
            android:background="@drawable/background_no_button"
            android:textColor="#1f8f9e"
            android:width="130dp" />
        <Button

            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Tips"
            android:id="@+id/menu_tips"
            android:layout_weight="0.06"
            android:allowUndo="false"
            android:background="@drawable/background_no_button"
            android:textColor="#1f8f9e"
            android:width="130dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/content_question"
        android:layout_below="@+id/menu_toolbar">
        <fragment
            android:layout_width="455dp"
            android:layout_height="461dp"
            android:name="android.webkit.WebViewFragment"
            android:id="@+id/content_tab1"
            android:layout_gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:text="Tab1"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/content_tab1" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/content_categories"
        android:layout_below="@+id/menu_toolbar">
        <fragment
            android:layout_width="455dp"
            android:layout_height="461dp"
            android:name="android.webkit.WebViewFragment"
            android:id="@+id/content_tab2"
            android:layout_gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:text="Tab2"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/content_tab2" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/content_tips"
        android:layout_below="@+id/menu_toolbar">
        <fragment
            android:layout_width="455dp"
            android:layout_height="461dp"
            android:name="android.webkit.WebViewFragment"
            android:id="@+id/content_tab3"
            android:layout_gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:text="Tab3"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/content_tab3" />

    </RelativeLayout>


</RelativeLayout>

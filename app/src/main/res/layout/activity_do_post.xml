<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <include
        android:id="@+id/toolbar_action"
        layout="@layout/toolbar_action">
    </include>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="13dp">

        <!-- title post -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp"
            android:layout_marginBottom="0dp"/>

        <EditText android:id="@+id/input_title_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint=""
            android:layout_below="@+id/textView"
            android:textSize="16dp"
            android:textColorHint="#c2c2c2"/>

        <!-- description post -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="10dp"
            />

        <EditText android:id="@+id/input_descripction_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:textSize="16dp"
            android:inputType="textMultiLine"
            android:textColorHint="#c2c2c2"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"
            android:layout_marginTop="10dp">
            <include
                android:id="@+id/add_tags"
                layout="@layout/activity_preferences">
            </include>
        </ScrollView>

        <Button
            android:id="@+id/btn_doPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            android:text="@string/btn_send"
            android:background="@drawable/button_fill_primary"
            android:textColor="#FFFFFF"
            android:layout_gravity="bottom|right"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:clickable="true" />

    </LinearLayout>
</LinearLayout>
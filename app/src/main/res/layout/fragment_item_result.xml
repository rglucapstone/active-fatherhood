<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:paddingBottom="8dp"
    android:paddingTop="3dp"
    android:paddingRight="10dp"
    android:id="@+id/ly_activity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="1dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ly_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Contenido de prueba con mucho texto para ver como se ve las pregunta"
            android:ellipsize="end"
            android:maxLines="3"
            android:singleLine="false"
            android:layout_marginTop="0dp"
            android:textColor="#444444"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/ly_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="left" >
            <TextView
                android:id="@+id/txt_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="13sp"
                android:textColor="@color/mediumGrey"
                android:layout_alignParentLeft="true"
                android:paddingTop="2dp"
                android:text="10 respuestas"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ly_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right" >
            <com.github.curioustechizen.ago.RelativeTimeTextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="11sp"
                android:layout_alignParentRight="true"
                android:text="2016-01-30 13:45:30" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarAlwaysDrawVerticalTrack="true">
        <include
            android:id="@+id/toolbar_action"
            layout="@layout/toolbar_action">
        </include>

        <include
            android:id="@+id/loading_question"
            layout="@layout/loading_view">
        </include>

    <!-- Question -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:id="@+id/layout_item_question">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp">
                <TextView
                    android:id="@+id/txt_qcontent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="jjj"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:singleLine="false"
                    android:layout_marginTop="0dp"
                    android:textColor="#444444"
                    android:textSize="14sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="wrap_content">
                <!--<ImageButton
                    android:id="@+id/btn_lik"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="5dp"
                    android:visibility="gone"
                    android:background="@drawable/ico_suggest"/>-->

                <!-- Btn Like -->
                <ImageButton
                    android:id="@+id/btn_like_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="5dp"
                    android:visibility="invisible"
                    android:background="@mipmap/ico_like_light_grey_24"/>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:paddingBottom="5dp">

            <!-- Tags -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:id="@+id/ly_themes"
                android:gravity="left" >
                <ImageView
                    android:id="@+id/ic_tag_blue"
                    android:onClick="profileOn"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/icon_tag_blue"
                    android:layout_marginTop="3dp" />
                <TextView
                    android:id="@+id/txt_qtags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="12sp"
                    android:layout_marginLeft="15dp"
                    android:text="Bebés"/>
            </RelativeLayout>
        </LinearLayout>
        <!-- Reporte -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="11dp">
            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txt_qanswers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textAlignment="center"
                    android:textSize="11sp"
                    android:textColor="@color/mediumGrey"
                    android:text="10 respuestas"
                    />
                <TextView
                    android:id="@+id/txt_separator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="·"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/txt_pcomments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textAlignment="center"
                    android:textSize="11sp"
                    android:textColor="@color/mediumGrey"
                    android:text="10 Comentarios"
                    />
            </LinearLayout>

            <!-- User -->
            <RelativeLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/link_user"
                android:gravity="right"
                android:paddingRight="20dp">
                <ImageView
                    android:id="@+id/ic_user"
                    android:onClick="profileOn"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@drawable/ico_profile_grey" />
                <TextView
                    android:id="@+id/txt_quser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="12sp"
                    android:layout_marginLeft="23dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="4dp"
                    android:text="User"
                    android:textColor="@color/colorThird"
                    android:onClick="profileOn"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Answers -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/lightGrey"
        android:weightSum="1">

        <!-- Container Answers -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="331dp"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:background="@color/colorPrimaryLabel"
            android:layout_weight="0.75">
            <TextView
                android:id="@+id/title_answers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"
                android:textSize="15dp"
                android:textColor="@color/mediumGrey"
                android:layout_marginLeft="5dp" />

                <include
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/layout_list_answers"
                    layout="@layout/fragment_list_answers">
                </include>
            <!--<ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/listAnswer"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="0.25">
            <Button
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:id="@+id/btn_answering"
                android:text="Responder"
                android:textColor="#FFFFFF"
                android:textSize="13dp"
                android:background="@drawable/button_fill_primary"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="90dp"
                android:layout_marginLeft="90dp"
                android:clickable="true"
                android:onClick="answer"/>
        </LinearLayout>

    </LinearLayout>
    <!--<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_answer"
        android:id="@+id/btn_answer"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="answer" />-->
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:id="@+id/content_profile">

    <include
        android:id="@+id/loading_profile"
        layout="@layout/loading_view">
    </include>

    <!-- Datos -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
            <Button
                android:id="@+id/back_home"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ico_back"
                android:onClick="backProfile"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:background="@drawable/profile5"
                android:layout_marginLeft="110dp"
                android:layout_gravity="center"
                android:layout_weight="0.06" />
            <Button
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="5dp"
                android:background="@mipmap/ic_edit_white_square_24"
                android:onClick="editProfile"/>

        </LinearLayout>
        <TextView
            android:id="@+id/txt_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorPrimaryLabel"
            android:textSize="19dp"
            android:focusable="true"
            android:layout_gravity="center"
            android:paddingTop="7dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="39 años"
            android:textSize="13dp"
            android:textColor="@color/colorPrimaryLabel"
            android:layout_gravity="center"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txt_profile_goodfather"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorPrimaryLabel"
            android:textSize="13dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_weight="0.35" />
    </LinearLayout>

    <!-- Padres Guru-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:paddingTop="2dp"
        android:paddingLeft="15dp"
        android:paddingBottom="0dp"
        android:background="@color/backgroundGrey"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:paddingTop="5dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/guru_progress_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Padre Gurú"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/normalText"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:textIsSelectable="true"
                        android:layout_marginTop="6dp" />
                </LinearLayout>

                <!--Progress Guru-->
                <ImageView
                    android:id="@+id/iconUser"
                    android:layout_width="55dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ico_progress"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"/>

                <!--Tags Guru-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tag_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salud"
                        android:textSize="13dp"
                        android:gravity="center"
                        android:textColor="@color/normalText"
                        android:textIsSelectable="true" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  *  " />
                    <TextView
                        android:id="@+id/tag_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Niños"
                        android:textSize="13dp"
                        android:gravity="center"
                        android:textColor="@color/normalText"
                        android:textIsSelectable="true" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  *  " />
                    <TextView
                        android:id="@+id/tag_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Escuela"
                        android:textSize="13dp"
                        android:gravity="center"
                        android:textColor="@color/normalText"
                        android:textIsSelectable="true" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <!--Acciones Guru-->
        <RelativeLayout
            android:layout_width="145dp"
            android:layout_height="match_parent"
            android:gravity="left">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="0dp">
                <LinearLayout
                    android:id="@+id/btn_ask_guru"
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/background_button_white"
                    android:padding="6dp"
                    android:clickable="true"
                    android:onClick="askGuru">
                    <ImageView
                        android:id="@+id/ico_question"
                        android:layout_width="19dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ico_question"/>
                    <TextView
                        android:id="@+id/text_question_guru"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Preguntar"
                        android:textSize="12dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="7dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_gravity="center" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="133dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/background_button_white"
                    android:padding="8dp"
                    android:clickable="true"
                    android:onClick="publicationsGuru">
                    <ImageView
                        android:id="@+id/ico_publication"
                        android:layout_width="19dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ico_post"/>
                    <TextView
                        android:id="@+id/ico_publication_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Publicaciones"
                        android:textSize="13dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="0dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <!-- Reporte Actividades-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/background_border_bottom_top"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="92dp"
                android:layout_height="37dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/txt_questions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="13dp"
                    android:gravity="center" />
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_questions"
                    android:textSize="11dp"
                    android:gravity="center"
                    android:layout_below="@+id/txt_questions"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="92dp"
                android:layout_height="37dp"
                android:gravity="center"
                android:background="@drawable/background_line_vertical">
                <TextView
                    android:id="@+id/txt_answers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="35"
                    android:textSize="13dp"
                    android:gravity="center" />
                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_answers"
                    android:textSize="11dp"
                    android:gravity="center"
                    android:layout_below="@+id/txt_answers"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="92dp"
                android:layout_height="37dp"
                android:gravity="center"
                android:background="@drawable/background_line_vertical">
                <TextView
                    android:id="@+id/txt_posts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="13dp"
                    android:gravity="center" />
                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_posts"
                    android:textSize="11dp"
                    android:gravity="center"
                    android:layout_below="@+id/txt_posts"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="92dp"
                android:layout_height="37dp"
                android:gravity="center"
                android:background="@drawable/background_line_vertical">
                <TextView
                    android:id="@+id/txt_likes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="13dp"
                    android:gravity="center" />
                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_likes"
                    android:textSize="11dp"
                    android:gravity="center"
                    android:layout_below="@+id/txt_likes"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Actividades -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:background="@color/lightGrey">
        <TextView
            android:id="@+id/title_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actividad"
            android:textSize="15dp"
            android:paddingLeft="7dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:gravity="left"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:orientation="vertical"
            android:background="#ffffff">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="#ffffff">
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ver más"
                android:gravity="center"
                android:padding="3dp"
                android:background="@drawable/border_top_blue"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

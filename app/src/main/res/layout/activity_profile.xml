<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightGrey"
    android:weightSum="1">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ico_edit"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/profile5"
                android:layout_marginLeft="130dp"
                android:layout_gravity="center"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ricardo Arregui"
            android:textColor="@color/colorPrimaryLabel"
            android:textSize="15dp"
            android:focusable="true"
            android:layout_gravity="center"
            android:paddingTop="7dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="39 años"
            android:textSize="12dp"
            android:textColor="@color/colorPrimaryLabel"
            android:layout_gravity="center"
            android:textStyle="bold" />
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/description_user"
            android:textColor="@color/colorPrimaryLabel"
            android:textSize="12dp"
            android:textAlignment="center"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="128dp"
            android:layout_height="37dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="13dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="false"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="30dp"
                android:id="@+id/textView7" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preguntas"
                android:textSize="12dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:id="@+id/textView5"
                android:layout_below="@+id/textView7"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp" />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="18dp"
                android:background="@drawable/ico_question"
                android:id="@+id/imageView2"
                android:layout_toLeftOf="@+id/textView5"
                android:layout_alignBottom="@+id/textView5"
                android:layout_marginBottom="5dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView6"
                android:layout_alignTop="@+id/imageView2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="128dp"
            android:layout_height="37dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="35"
                android:textSize="13dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:id="@+id/textView8"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="false"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="30dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Respuestas"
                android:textSize="12dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:id="@+id/textView9"
                android:layout_below="@+id/textView8"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp" />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="35dp"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ico_answer"
                android:id="@+id/imageView3"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/textView8"
                android:layout_toStartOf="@+id/textView8" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="126dp"
            android:layout_height="37dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="13dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:id="@+id/textView10"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="false"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Votaciones"
                android:textSize="12dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:id="@+id/textView11"
                android:layout_below="@+id/textView10"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView4"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="35dp"
                android:layout_height="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/ico_junior"
                android:layout_alignBottom="@+id/textView11"
                android:layout_toLeftOf="@+id/textView11"
                android:layout_toStartOf="@+id/textView11"
                android:layout_marginBottom="5dp" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_line_primary"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center">
            <TextView
                android:id="@+id/guru_progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gurú"
                android:textSize="12dp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <ProgressBar
                android:id="@+id/guru_progress"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/guru_progress_text" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:paddingTop="10dp">
        <RelativeLayout
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background_border_bottom"
            android:padding="10dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actividad"
                android:textSize="12dp"
                android:gravity="center"
                android:id="@+id/textView12"
                android:textColor="@color/actionbar_title_text"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:layout_marginTop="-10dp"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Publicaciones"
                android:textSize="12dp"
                android:textAlignment="center"
                android:id="@+id/textView13"
                android:layout_alignParentRight="true"
                android:textColor="@color/actionbar_title_text"
                android:layout_alignParentEnd="true"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="348dp"
        android:orientation="vertical">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_question"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </LinearLayout>
</LinearLayout>



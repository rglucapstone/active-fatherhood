<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/toolbar_action"
        layout="@layout/toolbar_action">
    </include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/ico_profile_grey"
                android:layout_marginLeft="120dp"
                android:layout_gravity="center"
                android:layout_weight="0.06" />
            <ImageButton
                android:layout_width="16dp"
                android:layout_height="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ico_edit_primary"
                android:layout_marginLeft="0dp"
                android:onClick="editProfile"/>
        </LinearLayout>

        <!-- Email Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"></android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- User -->
            <EditText android:id="@+id/input_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Nombres"
                android:layout_below="@+id/textView"
                android:layout_marginTop="20dp"
                android:textSize="16dp"
                android:textColorHint="#c2c2c2"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- Email -->
            <EditText android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="Correo Electrónico"
                android:layout_marginTop="15dp"
                android:textSize="16dp"
                android:textColorHint="#c2c2c2" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- Edad -->
            <EditText android:id="@+id/input_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:hint="Edad"
                android:layout_marginTop="15dp"
                android:textSize="16dp"
                android:textColorHint="#c2c2c2" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Mantra -->
            <TextView android:id="@+id/title_mantra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="¿Qué consideras es ser un buen Padre?"
                android:layout_marginTop="25dp"
                android:textSize="16dp"
                android:paddingBottom="8dp"
                android:textColor="@color/colorPrimary"/>

            <EditText android:id="@+id/input_mantra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:hint="Escribe aquí tu comentario"
                android:layout_marginTop="15dp"
                android:textSize="16dp"
                android:textColorHint="#c2c2c2" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top">
            <Button
                android:id="@+id/btn_acept"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:text="@string/btn_aceptar"
                android:onClick="updateProfile"
                android:clickable="true"
                android:background="@drawable/button_fill_primary"
                android:textColor="@color/colorPrimaryText"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="false"
                android:layout_alignParentEnd="false"
                android:layout_alignWithParentIfMissing="false"
                android:layout_alignParentRight="false"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/message_intereses"
        android:id="@+id/textView3"
        android:layout_marginTop="29dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:textColor="#6c6b6b" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

    </LinearLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bebés"
        android:id="@+id/check_bebes"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="34dp"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aprendizaje"
        android:id="@+id/check_aprendizaje"
        android:checked="false"
        android:layout_below="@+id/check_bebes"
        android:layout_alignLeft="@+id/check_bebes"
        android:layout_alignStart="@+id/check_bebes" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Niños"
        android:id="@+id/check_niños"
        android:checked="false"
        android:layout_below="@+id/check_aprendizaje"
        android:layout_alignLeft="@+id/check_aprendizaje"
        android:layout_alignStart="@+id/check_aprendizaje" />

</RelativeLayout>
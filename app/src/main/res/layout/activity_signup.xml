<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Regístrate para que puedas participar"
            android:layout_marginTop="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"
            android:textColor="#35adbd" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- User -->
        <EditText android:id="@+id/input_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Nombre de usuario"
            android:layout_below="@+id/textView"
            android:layout_marginTop="30dp"
            android:textSize="16dp"
            android:textColorHint="#c2c2c2" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- Names -->
        <EditText android:id="@+id/input_names"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Nombres Completos"
            android:layout_marginTop="25dp"
            android:textSize="16dp"
            android:textColorHint="#c2c2c2" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- Email -->
        <EditText android:id="@+id/input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Correo Electrónico"
            android:layout_marginTop="25dp"
            android:textSize="16dp"
            android:textColorHint="#c2c2c2" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- Password -->
        <EditText android:id="@+id/input_contraseña"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Contraseña"
            android:layout_marginTop="25dp"
            android:textSize="16dp"
            android:textColorHint="#c2c2c2" />
    </RelativeLayout>
    <!--<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText android:id="@+id/input_names"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:hint="Edad"
            android:layout_marginTop="15dp"
            android:textSize="16dp"
            android:textColorHint="#c2c2c2" />
    </RelativeLayout>-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top">
        <Button
            android:id="@+id/btn_acept"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_aceptar"
            android:onClick="keepOn"
            android:clickable="true"
            android:background="@drawable/background_button_white"
            android:textColor="#35adbd"
            android:layout_gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="false"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentRight="false"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp" />
    </RelativeLayout>
</LinearLayout>

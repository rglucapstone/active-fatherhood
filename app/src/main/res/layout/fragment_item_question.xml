<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingRight="10dp">
        <!-- Fecha -->
        <TextView
            android:id="@+id/txt_qdatetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="2 min"
            android:textColor="#999999"
            android:textSize="12sp" />
        <!-- Like -->
        <ImageButton
            android:id="@+id/btn_like_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@mipmap/ico_like_light_grey_24"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_qcontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/prueba"
            android:ellipsize="end"
            android:maxLines="3"
            android:singleLine="false"
            android:layout_marginTop="3dp"
            android:textColor="#666666"
            android:textSize="14sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:paddingBottom="7dp">
        <!-- Tags -->
        <RelativeLayout
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:id="@+id/ly_themes"
            android:gravity="left" >
            <ImageView
                android:id="@+id/ic_tag"
                android:onClick="profileOn"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_tag"
                android:layout_marginTop="3dp" />
            <TextView
                android:id="@+id/txt_qtags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp"
                android:layout_marginLeft="15dp"
                android:text="BebÃ©s"/>
        </RelativeLayout>
        <!-- Tags -->
        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ic_user"
                android:onClick="profileOn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ico_profile_grey" />
            <TextView
                android:id="@+id/txt_quser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="2dp"
                android:text="User"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>